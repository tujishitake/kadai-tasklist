<h1><%= @task.id %>のタスク詳細ページ</h1>

<table class="table table-bordered">
  <tr class='row'>
    <th class="col-xs-3">id</th>
    <td class="col-xs-9"><%= @task.id %></td>
  </tr>
  <tr class="row">
    <th class="col-xs-3">タスク</th>
    <td class="col-xs-9"><%= @task.content %></td>
  </tr>
  <tr class="row">
    <th class="col-xs-3">ステータス</th>
    <td class="col-xs-9"><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>